#include <bits/stdc++.h>
using namespace std;

int main(){
    int t, n, k;
    cin >> t;
    while(t--){
        cin >> n;
        cin >> k;
        int x = n * (n - 1) / 2;
        
        if((k >= (n - 1)) || (k == x)){
            cout << 1 << endl;
            continue;
        }
        cout << n << endl;
    }
    
    return 0;
}
